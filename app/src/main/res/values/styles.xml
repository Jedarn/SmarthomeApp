<resources>
    <!-- Base application theme -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set the window background to your gradient drawable -->
        <item name="android:windowBackground">@drawable/login_background</item>
        <!-- Default text color in the application -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for EditText to use rounded corners -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/rounded_corner</item> <!-- Rounded corners -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for Buttons -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/purple_500</item> <!-- Button background color -->
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
